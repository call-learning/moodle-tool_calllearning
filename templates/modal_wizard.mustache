{{!
    @template tool_calllearning/modal_wizard

    Template to display a modal with next, previous, cancel and save buttons.
    Context variables required for this template:
    * title A cleaned string (use clean_text()) to display.
    * body HTML content for the body
    * footer HTML content for the footer
    Example context (json):
    {
        "title": "Example modal",
        "body": "Some example content for the body",
        "footer": "<div>Footer content</div>"
     }
}}
{{< core/modal }}
    {{$footer}}
        <button type="button" class="btn btn-secondary" data-action="cancel">{{#str}} cancel {{/str}}</button>
        {{#showsave}}<button type="button" class="btn btn-primary" data-action="save">{{#str}} savechanges {{/str}}</button>{{/showsave}}
        <button type="button" class="btn btn-secondary" data-action="previous">{{#str}} previous {{/str}}</button>
        <button type="button" class="btn btn-secondary" data-action="next">{{#str}} next {{/str}}</button>
    {{/footer}}
{{/ core/modal }}
